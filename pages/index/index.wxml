<!-- index.wxml -->
<view class="cloud-section">
  <image src='../../assets/cover/cloud1.png' />
  <image src='../../assets/cover/cloud2.png' />
  <image src='../../assets/cover/cloud3.png' />
</view>
<view class="title-section">
  <image src='../../assets/cover/banner_1.png' />
  <image src='../../assets/cover/banner_2.png' />
  <image src='../../assets/cover/banner_3.png' />
  <image src='../../assets/cover/banner_4.png' />
</view>
<image class='userBg' src='../../assets/cover/main_back.png'></image>
<view id="main">
  <popover wx:if="{{isLoginOpen}}">
    <view class="login-section">
      <view class="login-header">
        <text>个人信息</text>
        <image class="close-btn" bindtap="closeLoginModal" src="../../assets/cover/close.png"></image>
      </view>
      <view class="login-input-section">
        <view class="login-inline">
          <view class="login-input">
            <label for="sName">姓名</label>
            <input name="sName" type='text' placeholder='' />
          </view>
          <view class="login-input">
            <label for="sSex">性别</label>
            <input name="sSex" type='text' placeholder='' />
          </view>
        </view>
        <view class="login-inline">
          <view class="login-input">
            <label for="sCode">学号</label>
            <input name="sCode" type='text' placeholder='' />
          </view>
        </view>
        <view class="login-inline">
          <view class="login-input">
            <label for="sEmail">邮箱</label>
            <input name="sEmail" type='text' placeholder='' />
          </view>
        </view>
      </view>
      <view class="login-btn-section">
        <button class="main-btn h login-btn"></button>
      </view>
    </view>
  </popover>
  <popover wx:if="{{isInfoOpen}}">
    <view class="info-section">
      <image class="close-btn" bindtap="closeInfoModal" src="../../assets/cover/close.png"></image>
      <view class="info-potrait-section">
        <view class="info-avatar">
          <image src="{{userInfo.avatarUrl}}"></image>
        </view>
        <view class="info-profile">
          <text class="">我的积分：</text>
          <text class="">已累计答题：</text>
          <!-- <view class="score"></view>
          <view class="day"></view> -->
        </view>
      </view>
      <view class="info-detail">
        <text class="info-detail-text-item">姓名:<text></text></text>
        <text class="info-detail-text-item">学号:<text></text></text>
        <text class="info-detail-text-item">邮箱:<text></text></text>
        <text class="info-detail-text-item">性别:<text></text></text>
        </view>
      <button></button>
    </view>
  </popover>
  <button class="main-btn h play-btn" bindtap="startGame" open-type="getUserInfo"></button>
  <button class="main-btn v rank-btn"></button>
  <button class="main-btn h play-btn" bindtap="startGame" open-type="getUserInfo"></button>
  <button class="main-btn v rank-btn" bindtap="showRank"></button>
  <button class="main-btn v info-btn" bindtap="showInfoModal"></button>
  <button class="main-btn v review-btn"></button>
</view>
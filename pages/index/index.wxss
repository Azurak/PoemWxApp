@keyframes cloud {
  from {
    transform: translateX(-100%);
    transform: translateX(-100%);
  }
  to {
    transform: translateX(100vw);
  }
}

@keyframes tiltB {
  from {
    transform: translateY(-2%);
  }
  50%{
    transform: translateY(2%);
  }
  to {
    transform: translateY(-2%);
  }
}

@keyframes tiltA {
  from {
    transform: translateY(2%);
  }
  50%{
    transform: translateY(-2%);
  }
  to {
    transform: translateY(2%);
  }
}
#main {
  height: 100vh;
  width: 100vw;
  display: flex;
  flex-direction: row;
}

.userBg {
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 100vh;
  background-color: #8fd1df;
  z-index: -1;
}

.login-inline {
  display: flex;
  flex-direction: column;
}

.login-input {
  display: flex;
  height: 15.3vw;
  flex-direction: column;
  justify-content: space-between;

}

.login-inline:first-child {
  flex-direction: row;
  justify-content: space-between;
}

.login-inline input {
  height: 10.267vw;
  background-color: #ffffff;
  width: 100%;
}

.login-inline label {
  height: 2.533vw;
  font-size: 2.44vw;
  font-weight: normal;
  font-stretch: normal;
  line-height: 1.6vw;
  letter-spacing: 0.493vw;
  color: #3f1921;
}

.login-inline:first-child input {
  width: 30.667vw;
}

.cloud-section {
  position: absolute;
  width: 100%;
  height: 29.694vw;
  top: 6.531vw;
}

.cloud-section image {
  position: absolute;
  will-change: transform;
}

.cloud-section image:nth-child(1) {
  width: 28.98vw;
  height: 9.082vw;
  animation: cloud 3s linear infinite;
}

.cloud-section image:nth-child(2) {
  width: 23.878vw;
  height: 5.51vw;
  top: 6.02vw;
  animation: cloud 5s linear infinite;
}

.cloud-section image:nth-child(3) {
  width: 20.612vw;
  height: 4.286vw;
  top: 29.694vw;
  animation: cloud 7s linear infinite;
}

.title-section {
  position: absolute;
  width: 74.796vw;
  height: 23.673vw;
  left: 12.551vw;
  top: 7.486vh;
  animation: fadeinT 1s ease-out backwards;
}

.title-section image:nth-child(1) {
  position: absolute;
  width: 15.204vw;
  height: 14.082vw;
  top: 3.878vw;
  animation: tiltA 4s linear infinite;
}

.title-section image:nth-child(2) {
  position: absolute;
  width: 13.673vw;
  height: 13.163vw;
  left: 21.429vw;
  animation: tiltB 4s linear infinite;
}

.title-section image:nth-child(3) {
  position: absolute;
  width: 16.837vw;
  height: 15.306vw;
  left: 38.776vw;
  bottom: 0;
  animation: tiltA 4s linear infinite;
}

.title-section image:nth-child(4) {
  position: absolute;
  width: 15.408vw;
  height: 14.796vw;
  right: 0;
  animation: tiltB 4s linear infinite;
  will-change: transform;
}

.info-section {
  position: relative;
  align-self: flex-end;
  margin: 0 auto;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-bottom: 35.382vh;
  width: 81.867vw;
  height: 37.781vh;
  background-color: #faefe9;
  box-shadow: 2.64vw 2.64vw 2.667vw 0vw rgba(8, 5, 0, 0.4);
  z-index: 1;
  animation: fadeinT 1s ease-out;
}

.main-btn-section {
  transform: translateY(50%);
}

.info-potrait-section {
  display: flex;
  background-color: #f7d4c8;
  width: 100%;
  height: 11.019vh;
  background-color: #f7d4c8;
  box-shadow: 0vh 0.075vh 0.075vh 0vh rgba(57, 20, 20, 0.4);
}

.info-section text {
  font-family: SourceHanSansCN-Normal;
  font-size: 2.44vw;
  font-weight: normal;
  font-stretch: normal;
  line-height: 1.6vw;
  letter-spacing: 0vw;
  color: #533d24;
}

.info-detail {
  display: flex;
  width: 61.867vw;
  height: 12.819vh;
  flex-direction: column;
  flex-wrap: wrap;
  align-items: flex-start;
  justify-content: space-between;
  align-self: center;
}

.info-detail text {
  color: #3f1921;
  height: 33.3%;
}

.info-profile {
  display: flex;
  height: 100%;
  margin: auto 0;
  margin-left: 5vw;
  flex-direction: column;
  justify-content: space-evenly;
}

.info-detail text.info-detail-text-item {
  letter-spacing: 0.493vw;
}


.info-avatar {
  height: 100%;
  width: 11.019vh;
  background: #666666;
}

.info-avatar image {
  width: 100%;
  height: 100%;
}

@keyframes cloud {
  from {
    transform: translateX(-100%);
    transform: translateX(-100%);
  }

  to {
    transform: translateX(100vw);
  }
}

@keyframes tiltB {
  from {
    transform: translateY(-2%);
  }

  50% {
    transform: translateY(2%);
  }

  to {
    transform: translateY(-2%);
  }
}

@keyframes tiltA {
  from {
    transform: translateY(2%);
  }

  50% {
    transform: translateY(-2%);
  }

  to {
    transform: translateY(2%);
  }
}
  align-self: flex-end;
  margin-bottom: 18.291vh;
  animation: fadeinT 1s ease-out;
}

.login-header {
  height: 18vw;
  width: 100%;
  position: relative;
  display: flex;
}

.close-btn {
  position: absolute;
  right: 1.333vw;
  top: 1.467vw;
  width: 2.4vw;
  height: 2.4vw;

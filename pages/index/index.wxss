@import "../../utils/image.wxss";

/**index.wxss**/

.login-section{
  display: flex;
  width: 82vw;
  height: 98vw;
  margin: auto;
  align-items: center;
  flex-direction: column;
  background-color: #fff3e4;
  z-index: 1;
  box-shadow: 3px 3px 10px #222222;
  /* display: none; */
}

.login-header{
  height: 18vw;
  width: 100%;
  position: relative;
  display: flex;
}

.close-btn{
  position: absolute;
  right: 1.32vw;
  top: 1.32vw;
  height: 2.4vw;
  width: 2.4vw;
}
.login-header text{
  letter-spacing: 1.3vw;
  margin: auto;
  font-size: 4.5vw;
}

.login-input-section{
  height:50vw;
  width: 63.3vw;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.login-btn-section{
  height: 30vw;
  display: flex;
}

.login-btn-section button{
  width: 41vw;
  letter-spacing: 1.8vw;
  height: 12.3vw;
  margin:auto;
  background-size: 100%,100%;
  color: #f3f3f4;
  border-radius: 0;
  box-shadow: .5px 1px 4px#666666;
}

#main{
  background-color: #8fd1df;
  padding-top:27vh;
}

.userBg{
  position: fixed;
  bottom: 0;
  width: 100vw;
  height: 100vh;
}

.login-inline {
  display: flex;
  flex-direction:column; 
}

.login-input{
  display: flex;
  height: 15.3vw;
  flex-direction:column;
  justify-content:space-between;

}

.login-inline:first-child{
  flex-direction: row;
  justify-content: space-between;
}

.login-inline input{
  height: 10.6vw;
  background-color: #ffffff;
  width: 100%;
}

.login-inline label{
  font-size: 2.2vw;
  letter-spacing: 0.7vw;
}

.login-inline:first-child input{
  width: 30.5vw;
}

.cloud-section{
  position: absolute;
  width: 100%;
  height: 29.694vw;
  top: 6.531vw;
}

.cloud-section image:nth-child(1){
  width: 28.98vw;
  height: 9.082vw;
  position: absolute;
  animation: cloud 3s linear infinite;
}

.cloud-section image:nth-child(2){
  width: 23.878vw;
  height: 5.51vw;
  top: 6.02vw;
  position: absolute;
  animation: cloud 5s linear infinite;
}

.cloud-section image:nth-child(3){
  width: 20.612vw;
  height: 4.286vw;
  top: 29.694vw;
  position: absolute;
  animation: cloud 7s linear infinite;
}

.title-section{
  position: absolute;
  width: 74.796vw;
  height: 23.673vw;
  left: 12.551vw;
  top: 14.49vw;
}

.title-section image:nth-child(1){
  position: absolute;
	width: 15.204vw;
  height: 14.082vw;
  top: 3.878vw;
  animation: tiltA 4s linear infinite;
}

.title-section image:nth-child(2){
  position: absolute;
  width: 13.673vw;
  height: 13.163vw;
  left: 21.429vw;
  animation: tiltB 4s linear infinite;
}

.title-section image:nth-child(3){
  position: absolute;
  width: 16.837vw;
  height: 15.306vw;
  left: 38.776vw;
  bottom: 0;
  animation: tiltA 4s linear infinite;
}

.title-section image:nth-child(4){
  position: absolute;
	width: 15.408vw;
  height: 14.796vw;
  right: 0;
  animation: tiltB 4s linear infinite;
}


@keyframes cloud {
  from {
    transform: translateX(-100%);
  }
  to {
    transform: translateX(100vw);
  }
}

@keyframes tiltB {
  from {
    transform: translateY(-2%);
  }
  50%{
    transform: translateY(2%);
  }
  to {
    transform: translateY(-2%);
  }
}

@keyframes tiltA {
  from {
    transform: translateY(2%);
  }
  50%{
    transform: translateY(-2%);
  }
  to {
    transform: translateY(2%);
  }
}